{
  "name": "spec-pilot",
  "version": "0.0.1",
  "description": "Spec Pilot MCP",
  "license": "MIT",
  "author": "mzkmnk",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "spec-pilot": "./bin/spec-pilot.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --sourcemap",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm clean && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsdown": "0.15.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.7.0",
    "vitest": "^3.2.4",
    "zod": "^3.25.8"
  },
  "packageManager": "pnpm@10.17.0"
}
